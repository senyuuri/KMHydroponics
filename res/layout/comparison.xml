<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/bg" />

	<LinearLayout 
	    android:baselineAligned="false" 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:paddingLeft="@dimen/container_left"
	    android:paddingRight="@dimen/container_right"
	    android:layout_gravity="center"
	    android:orientation="vertical" >

		    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:paddingLeft="@dimen/container_left">
	        
	        <TextView
	            android:id="@+id/com_title"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="5"
	            android:gravity="center_horizontal"
	            android:paddingTop="@dimen/medium_gap"
	            android:text="Problem 1"
	            android:textSize="@dimen/heading" />
		    
		    <LinearLayout 
		        android:layout_width="0dp"
		        android:layout_weight = "3"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_gravity="right"
		        android:paddingTop="@dimen/medium_gap">
		        
		        <Button
		            android:id="@+id/com_prev"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/button_previous"
		            android:onClick="prevStep"
		            android:text="Previous"
		            android:textSize="@dimen/button" />
		        
		        <TextView
		            android:id="@+id/com_progress"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="center_horizontal"
		            android:paddingLeft="@dimen/between_col"
		            android:paddingRight="@dimen/between_col"
		            android:text="4/20"
		            android:textSize="@dimen/normal" />
		        
		        <Button
		            android:id="@+id/com_next"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right"
		            android:background="@drawable/button_next"
		            android:onClick="nextStep"
		            android:text="Next"
		            android:textSize="@dimen/button" />
		    
		    </LinearLayout>
		    </LinearLayout>
		    
		  	<TextView
		  	    android:layout_width="wrap_content"
		  	    android:layout_height="wrap_content"
		  	    android:layout_gravity="center_horizontal"
		  	    android:text="Comparison between planting in soil and through hydroponics (Differences)"
		  	    android:textSize="@dimen/normal"/>

		    <TableLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:layout_gravity="center"
		        android:layout_margin="@dimen/big_gap">

		        <TableRow
		            android:id="@+id/tableRow1"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" >

		            <TextView
		                android:id="@+id/textView1"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="" 
		                android:textSize="@dimen/normal"
		                android:background="@drawable/tablegrid"
            			android:padding="@dimen/table_gap"/>

		            <TextView
		                android:id="@+id/textView2"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="Watering needed?" 
		                android:gravity="center"
		                android:textSize="@dimen/normal"
		                android:layout_span="2"
		                android:background="@drawable/tablegrid"
            			android:padding="@dimen/table_gap"/>

		            <TextView
		                android:id="@+id/textView3"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="Pests?" 
		                android:gravity="center"
		                android:textSize="@dimen/normal"
		                android:layout_span="2"
		                android:background="@drawable/tablegrid"
            			android:padding="@dimen/table_gap"/>

		        </TableRow>

		        <TableRow
		            android:id="@+id/tableRow2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" >

		            <TextView
		                android:id="@+id/textView4"
		                android:layout_width="300dp"
		                android:layout_height="wrap_content"
		                android:text="" 
		                android:textSize="@dimen/normal"
		                android:background="@drawable/tablegrid"
            			android:padding="@dimen/table_gap"/>

		            <TextView
		                android:id="@+id/textView5"
		                android:layout_width="150dp"
		                android:layout_height="wrap_content"
		                android:text="Yes"
		                android:gravity="center"
		                android:textSize="@dimen/normal" 
		                android:background="@drawable/tablegrid"
            			android:padding="@dimen/table_gap"/>

		            <TextView
		                android:id="@+id/textView6"
		                android:layout_width="150dp"
		                android:layout_height="wrap_content"
		                android:text="No"
		                android:gravity="center"
		                android:textSize="@dimen/normal"
		                android:background="@drawable/tablegrid"
            			android:padding="@dimen/table_gap"/>

		            <TextView
		                android:id="@+id/textView7"
		                android:layout_width="150dp"
		                android:layout_height="wrap_content"
		                android:text="More"
		                android:gravity="center"
		                android:textSize="@dimen/normal"
		                android:background="@drawable/tablegrid"
            			android:padding="@dimen/table_gap"/>

		            <TextView
		                android:id="@+id/textView8"
		                android:layout_width="150dp"
		                android:layout_height="wrap_content"
		                android:text="Less"
		                android:gravity="center"
		                android:textSize="@dimen/normal" 
		                android:background="@drawable/tablegrid"
            			android:padding="@dimen/table_gap"/>

		        </TableRow>

		        <TableRow
		            android:id="@+id/tableRow3"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" >

		            <TextView
		                android:id="@+id/textView4"
		                android:layout_width="300dp"
		                android:layout_height="wrap_content"
		                android:text="Plant in soil" 
		                android:textSize="@dimen/normal"
		                android:background="@drawable/tablegrid"
            			android:padding="@dimen/table_gap"/>
		    <RadioGroup
		        android:id="@+id/radiogroup1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_span = "2"
		        >

			    <RadioButton
			        android:id="@+id/radiobtn1"
		                android:layout_width="150dp"
		                android:layout_height="wrap_content"
		                android:gravity="center"
		                android:textSize="@dimen/normal" 
		                android:background="@drawable/tablegrid"
            			android:padding="@dimen/table_gap"/>


			    <RadioButton
			        android:id="@+id/radiobtn2"
		                android:layout_width="150dp"
		                android:layout_height="wrap_content"
		                android:gravity="center"
		                android:textSize="@dimen/normal" 
		                android:background="@drawable/tablegrid"
            			android:padding="@dimen/table_gap"/>


			</RadioGroup>

<RadioGroup
		        android:id="@+id/radiogroup2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_span = "2"
		        >

			    <RadioButton
			        android:id="@+id/radiobtn3"
		                android:layout_width="150dp"
		                android:layout_height="wrap_content"
		                android:gravity="center"
		                android:textSize="@dimen/normal" 
		                android:background="@drawable/tablegrid"
            			android:padding="@dimen/table_gap"/>


			    <RadioButton
			        android:id="@+id/radiobtn4"
		                android:layout_width="150dp"
		                android:layout_height="wrap_content"
		                android:gravity="center"
		                android:textSize="@dimen/normal" 
		                android:background="@drawable/tablegrid"
            			android:padding="@dimen/table_gap"/>


			</RadioGroup>
		        
		        
		        </TableRow>

		        <TableRow
		            android:id="@+id/tableRow4"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" >

		            <TextView
		                android:id="@+id/textView4"
		                android:layout_width="300dp"
		                android:layout_height="wrap_content"
		                android:text="Hydroponics" 
		                android:textSize="@dimen/normal"
		                android:background="@drawable/tablegrid"
            			android:padding="@dimen/table_gap"/>

			<RadioGroup
		        android:id="@+id/radiogroup3"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_span = "2"
		        >

			    <RadioButton
			        android:id="@+id/radiobtn5"
		                android:layout_width="150dp"
		                android:layout_height="wrap_content"
		                android:gravity="center"
		                android:textSize="@dimen/normal" 
		                android:background="@drawable/tablegrid"
            			android:padding="@dimen/table_gap"/>


			    <RadioButton
			        android:id="@+id/radiobtn6"
		                android:layout_width="150dp"
		                android:layout_height="wrap_content"
		                android:gravity="center"
		                android:textSize="@dimen/normal" 
		                android:background="@drawable/tablegrid"
            			android:padding="@dimen/table_gap"/>


			</RadioGroup>
			
			<RadioGroup
		        android:id="@+id/radiogroup4"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_span = "2"
		        >

			    <RadioButton
			        android:id="@+id/radiobtn7"
		                android:layout_width="150dp"
		                android:layout_height="wrap_content"
		                android:gravity="center"
		                android:textSize="@dimen/normal" 
		                android:background="@drawable/tablegrid"
            			android:padding="@dimen/table_gap"/>


			    <RadioButton
			        android:id="@+id/radiobtn8"
		                android:layout_width="150dp"
		                android:layout_height="wrap_content"
		                android:gravity="center"
		                android:textSize="@dimen/normal" 
		                android:background="@drawable/tablegrid"
            			android:padding="@dimen/table_gap"/>


			</RadioGroup>
		        
		        
		        </TableRow>
		    </TableLayout>
		    
		    <Button
		        android:id="@+id/com_solution"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="right"
		        android:background="@drawable/button_next"
		        android:onClick="showSolution"
		        android:text="Submit"
		        android:textSize="@dimen/normal" />

	</LinearLayout>

</FrameLayout>