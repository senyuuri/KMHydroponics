<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/bg" />

	<LinearLayout 
	    android:baselineAligned="false" 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:paddingLeft="@dimen/container_left"
	    android:paddingRight="@dimen/container_right"
	    android:layout_gravity="center"
	    android:orientation="vertical" >

		    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:paddingLeft="@dimen/container_left">
	        
	        <TextView
	            android:id="@+id/mmcq_station"
	            android:layout_width="0dp"
	            android:layout_weight = "5"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:paddingTop="@dimen/medium_gap"
	            android:text="Problem 1"
	            android:textSize="@dimen/heading" />
		    
		    <LinearLayout 
		        android:layout_width="0dp"
		        android:layout_weight = "3"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_gravity="right"
		        android:paddingTop="@dimen/medium_gap">
		        
		        <Button
		            android:id="@+id/mmcq_prev"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/button_previous"
		            android:onClick="prevStep"
		            android:text="Previous"
		            android:textSize="@dimen/button" />
		        
		        <TextView
		            android:id="@+id/mmcq_progress"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="center_horizontal"
		            android:paddingLeft="@dimen/between_col"
		            android:paddingRight="@dimen/between_col"
		            android:text="4/20"
		            android:textSize="@dimen/normal" />
		        
		        <Button
		            android:id="@+id/mmcq_next"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right"
		            android:background="@drawable/button_next"
		            android:onClick="nextStep"
		            android:text="Next"
		            android:textSize="@dimen/button" />
		    
		    </LinearLayout>
		    </LinearLayout>

		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" 
		        android:layout_gravity="center_horizontal"
		        android:background="#66FFFFFF"
		        android:paddingLeft="@dimen/medium_gap"
		        android:paddingRight="@dimen/medium_gap"
		        >
		    
		        <TextView
	            	android:id="@+id/mmcq_question"
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:layout_gravity="center_horizontal"
	            	android:paddingBottom="@dimen/medium_gap"
	            	android:text="Question"
	            	android:textSize="@dimen/mid" />
		        <LinearLayout 
		            android:layout_width="wrap_content"
		            android:layout_height = "wrap_content"
		            android:orientation="horizontal">
		        
		        <ImageView
		        	android:id="@+id/mmcq_correct1"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:src="@drawable/correct" />

		        <CheckBox
		            android:id="@+id/mmcq_checkbox1"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text=""
		            android:textSize="@dimen/solution" />
		        </LinearLayout>
		        
		        <LinearLayout 
		            android:layout_width="wrap_content"
		            android:layout_height = "wrap_content"
		            android:orientation="horizontal">
		        
		        <ImageView
		        	android:id="@+id/mmcq_correct2"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:src="@drawable/correct" />

		        <CheckBox
		            android:id="@+id/mmcq_checkbox2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text=""
		            android:textSize="@dimen/solution" />
		        </LinearLayout>
		        
		        <LinearLayout 
		            android:layout_width="wrap_content"
		            android:layout_height = "wrap_content"
		            android:orientation="horizontal">
		        
		        <ImageView
		        	android:id="@+id/mmcq_correct3"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:src="@drawable/correct" />

		        <CheckBox
		            android:id="@+id/mmcq_checkbox3"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text=""
		            android:textSize="@dimen/solution" />
		        </LinearLayout>
		        
		        <LinearLayout 
		            android:layout_width="wrap_content"
		            android:layout_height = "wrap_content"
		            android:orientation="horizontal">
		        
		        <ImageView
		        	android:id="@+id/mmcq_correct4"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:src="@drawable/correct" />

		        <CheckBox
		            android:id="@+id/mmcq_checkbox4"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text=""
		            android:textSize="@dimen/solution" />
		        </LinearLayout>
		        
		        <LinearLayout 
		            android:layout_width="wrap_content"
		            android:layout_height = "wrap_content"
		            android:orientation="horizontal">
		        
		        <ImageView
		        	android:id="@+id/mmcq_correct5"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:src="@drawable/correct" />

		        <CheckBox
		            android:id="@+id/mmcq_checkbox5"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text=""
		            android:textSize="@dimen/solution" />
		        </LinearLayout>
		        
		        <LinearLayout 
		            android:layout_width="wrap_content"
		            android:layout_height = "wrap_content"
		            android:orientation="horizontal">
		        
		        <ImageView
		        	android:id="@+id/mmcq_correct6"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:src="@drawable/correct" />

		        <CheckBox
		            android:id="@+id/mmcq_checkbox6"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text=""
		            android:textSize="@dimen/solution" />
		        </LinearLayout>
		        
		       
		    </LinearLayout>
		    <Button
		        android:id="@+id/mmcq_solution"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/button_next"
		        android:onClick="showSolution"
		        android:layout_gravity="right"
		        android:text="Submit &amp; check answer"
		        android:textSize="@dimen/normal" />

	</LinearLayout>

</FrameLayout>